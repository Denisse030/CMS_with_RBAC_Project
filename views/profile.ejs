<%- include('./layouts/header') %>

<h1><span class="goback" onclick="window.history.back()">‚Üê</span> Profile</h1>

<div class="profile">
  <div>
    <p class="title">ID</p>
    <p class="subtitle"><%= person && person.id ? person.id : 'N/A' %></p>
  </div>
  <div>
    <p class="title">Email/username</p>
    <p class="subtitle"><%= person && person.email ? person.email : 'N/A' %></p>
  </div>
  <div>
    <p class="title">Role</p>
    <p class="subtitle"><%= person && person.role ? person.role : 'N/A' %></p>
  </div>
  <div>
    <p class="title">User object</p>
    <pre class="subtitle"><%= person ? JSON.stringify(person, null, 2) : 'No user data available' %></pre>
  </div>
</div>

<%- include('./layouts/footer') %>
